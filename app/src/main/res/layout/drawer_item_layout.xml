<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_list_item_heigth"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="@dimen/drawer_icon_size"
        android:layout_height="@dimen/drawer_icon_size"
        android:layout_marginLeft="@dimen/drawer_icon_margin"
        android:layout_marginRight="@dimen/drawer_icon_margin"/>

    <TextView
        android:id="@+id/drawer_item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/drawer_tv_magin"
        android:layout_marginRight="@dimen/drawer_tv_magin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/drawer_list_item_text_size"/>

</LinearLayout>