<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/btn_padding_10">

    <EditText
        android:id="@+id/ed_amount"
        android:layout_width="@dimen/share_ed_width"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/list_item_view_spacing"
        android:inputType="numberDecimal"
        android:textSize="@dimen/list_item_text_size_20"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="@dimen/list_item_height_small"
        android:layout_height="@dimen/list_item_height_small"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/list_item_view_spacing"
        android:textSize="@dimen/list_item_text_size_15"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/iv_user"
        android:layout_toLeftOf="@id/tv_amount"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Francesco"/>

</RelativeLayout>